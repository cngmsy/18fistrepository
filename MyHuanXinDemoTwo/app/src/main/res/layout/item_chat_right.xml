<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="154dp"
    >
    <ImageView
        android:id="@+id/item_chat1_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/em_default_avatar"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/item_chat_right_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:background="@mipmap/ease_chatto_bg_normal"
       android:visibility="gone"

        />
    <ImageView
        android:id="@+id/item_chat_right_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/item_tv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ease_location_msg"
        android:text="aaa"
        android:visibility="gone"
        android:textColor="#fff"
        />

    <FrameLayout
        android:id="@+id/recorder_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:background="@mipmap/ease_chatto_bg_focused"
        android:visibility="gone"
        >
        <View
            android:id="@+id/id_recorder_anim"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/adj"
            android:layout_gravity="center_vertical|right"
            android:visibility="visible"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/id_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:textColor="#ff777777"
        android:visibility="visible"
        android:layout_below="@+id/recorder_length"
        android:layout_toLeftOf="@+id/recorder_length"
        android:text="aaa"
        />
</RelativeLayout>

