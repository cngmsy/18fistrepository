<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="154dp"

    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:id="@+id/item_chat_iv"
        android:src="@mipmap/em_default_avatar"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/item_chat_left_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:layout_toRightOf="@+id/item_chat_iv"
        android:background="@mipmap/ease_chatfrom_bg_normal"
        />
    <ImageView
        android:id="@+id/item_chat_left_iv"
        android:layout_width="154dp"
        android:layout_height="200dp"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:layout_toRightOf="@+id/item_chat_iv"
        android:background="@mipmap/ease_chatfrom_bg_normal"
        />
    <TextView
        android:id="@+id/item_chat_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_chat1_iv"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:layout_toRightOf="@+id/item_chat_iv"
        android:background="@mipmap/ease_location_msg"
        android:visibility="gone"
        android:textColor="#fff"
        />
    <FrameLayout
        android:id="@+id/recorder_length_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_chat_left_name"
        android:layout_centerVertical="true"
        android:background="@mipmap/ease_chatfrom_bg_focused"
        android:visibility="gone"
        >
        <View
            android:id="@+id/id_recorder_anim_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/adj"
            android:layout_gravity="center_vertical|right"
            android:visibility="visible"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/id_recorder_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:textColor="#ff777777"
        android:visibility="visible"
        android:layout_toRightOf="@+id/recorder_length_left"
        android:text="aaa"
        />






</RelativeLayout>