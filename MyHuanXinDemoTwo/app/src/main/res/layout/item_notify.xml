<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:src="@mipmap/em_default_avatar"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaa"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/item_tv_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxxxxxx"
            android:layout_alignLeft="@+id/item_tv_name"
            android:layout_below="@+id/item_tv_name"
            android:layout_marginTop="5dp"
            />

        <Button

            android:id="@+id/btn_agree"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/em_button_normal_shape"
            android:text="同意"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/em_button_normal_shape"
            android:text="拒绝"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_agree"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="sdasdas"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>