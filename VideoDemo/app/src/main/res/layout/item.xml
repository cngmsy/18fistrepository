<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="70dp">

        <RelativeLayout
            android:id="@+id/visiabile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false">

            <demo.example.com.videodemo.view.ContainerLayout
                android:id="@+id/ll_video"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:background="#999999"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

            </demo.example.com.videodemo.view.ContainerLayout>

            <FrameLayout
                android:id="@+id/fl_img"
                android:layout_width="match_parent"
                android:layout_height="205dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test" />

                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/item_tv"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_live_controller_play" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_not_wifi"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:background="#242424"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="正在使用非WiFi网络，播放将产生流量费用"
                    android:textColor="#EBEBEB"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_video_feed_start"
                    android:layout_width="96dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="17dp"
                    android:src="#999999" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_video"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="环保部督查发现北京重污染天气污染天气污染天气污染天气污染天气"
                android:textColor="#9d9d9d"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_tv"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-08-09 10:21"
                    android:textColor="#595959"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_video_readCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="播放量：99999"
                    android:textColor="#595959"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="12dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_video_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="评论：9080"
                    android:textColor="#8d8d8d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_video_shear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="分享"
                    android:textColor="#8d8d8d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_video_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:text="更多"
                    android:textColor="#8d8d8d"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/video_masked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2000000"
        android:visibility="visible" />

</FrameLayout>